import java.util.ArrayList;

public class Quiz {
	private String pergunta;
	private ArrayList<String> respostas;
	private int alternativa;
	
	public void getPergunta(String pergunta) {
		this.pergunta = pergunta; 
	}
	
	public void getRespostas(String resp1, String resp2, String resp3, String resp4) {
		this.respostas.add(resp1);
		this.respostas.add(resp2);
		this.respostas.add(resp3);
		this.respostas.add(resp4);
	}
}
